<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                             tools:context=".BlockScanMain"
                                             tools:showIn="@layout/app_bar_block_scan_main">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="373dp"
                android:id="@+id/linearLayout6"
                tools:layout_editor_absoluteX="6dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"
        >
            <TextView
                    android:text="Enter password"
                    android:layout_width="96dp"
                    android:layout_height="24dp"
                    android:id="@+id/textView2"
                    tools:layout_editor_absoluteY="321dp" tools:layout_editor_absoluteX="8dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="63dp" tools:layout_editor_absoluteY="196dp"
                    tools:layout_editor_absoluteX="120dp">
                <Button
                        android:text="Create Account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button4"
                        tools:layout_editor_absoluteY="295dp" tools:layout_editor_absoluteX="231dp"/>
                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/editText"
                        tools:layout_editor_absoluteY="343dp" tools:layout_editor_absoluteX="8dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout8" tools:layout_editor_absoluteX="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout9">
            <TextView
                    android:text="Select Account"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:id="@+id/textView3"
                    tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toTopOf="@+id/spinner"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp" tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/qrCode"/>
                <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:id="@+id/spinner"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" tools:layout_editor_absoluteY="35dp"
                        app:layout_constraintHorizontal_bias="0.0"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout3" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent">
                <Button
                        android:text="QR Code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewAddress"
                        tools:layout_editor_absoluteY="440dp" tools:layout_editor_absoluteX="8dp"
                        android:layout_weight="1"/>
                <Button
                        android:text="Check Storage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button2"
                        tools:layout_editor_absoluteY="440dp" tools:layout_editor_absoluteX="202dp"
                        android:layout_weight="1"/>
                <Button
                        android:text="Get Balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/button8"
                        tools:layout_editor_absoluteY="440dp" tools:layout_editor_absoluteX="8dp"
                        android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                tools:layout_editor_absoluteX="6dp"
                android:layout_marginBottom="36dp" app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/linearLayout9" android:layout_height="wrap_content">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Hello World!"
                    android:id="@+id/textViewOut"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:autoLink="web"
                    android:textColor="@color/colorAccent" android:clickable="true" android:linksClickable="true"
                    android:longClickable="true" android:selectAllOnFocus="true" android:textIsSelectable="true"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Game Id"
                    android:id="@+id/textViewOut4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            />
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" tools:layout_editor_absoluteY="35dp"
                    app:layout_constraintHorizontal_bias="0.0" android:layout_weight="1"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Game Id"
                    android:id="@+id/textViewOut3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            />
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editText3"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:text="RND"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ROCK2"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp" android:layout_weight="1"/>
                <Button
                        android:text="ROCK"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ROCK"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp"/>
                <Button
                        android:text="PAPER"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/PAPER"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp" android:layout_weight="1"/>
                <Button
                        android:text="SCISSORS"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/SCISSORS"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp" android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Authorize Transaction(password)"
                    android:id="@+id/textViewOut2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editText2"
                    tools:layout_editor_absoluteY="343dp" tools:layout_editor_absoluteX="8dp"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <Button
                        android:text="Create Game"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button3"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp"/>
                <Button
                        android:text="Join game"
                        android:layout_width="146dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/button6"
                        tools:layout_editor_absoluteY="382dp"
                        tools:layout_editor_absoluteX="201dp" android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>